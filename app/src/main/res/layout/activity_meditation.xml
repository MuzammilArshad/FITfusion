<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MeditationActivity"
        android:padding="16dp"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meditation"
            android:fontFamily="@font/headingfont"
            android:textSize="36sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn1min"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/whitebtn"
                android:paddingStart="15dp"
                android:textSize="16sp"
                android:elevation="5dp"
                android:fontFamily="@font/textviewfont"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 Minute"
                android:layout_marginBottom="8dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn3min"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:fontFamily="@font/textviewfont"
                android:textStyle="bold"
                android:textAlignment="center"
                android:elevation="5dp"
                android:background="@drawable/whitebtn"
                android:paddingStart="15dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 Minutes"
                android:layout_marginBottom="8dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn5min"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/whitebtn"
                android:paddingStart="15dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:elevation="5dp"
                android:fontFamily="@font/textviewfont"
                android:textStyle="bold"
                android:text="5 Minutes"
                android:layout_marginBottom="8dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn7min"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/whitebtn"
                android:paddingStart="15dp"
                android:textColor="@color/black"
                android:elevation="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7 Minutes"
                android:layout_marginBottom="8dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn10min"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/whitebtn"
                android:paddingStart="15dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:fontFamily="@font/textviewfont"
                android:elevation="5dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="10 Minutes"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:elevation="5dp"
            android:textSize="70sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#333333"
            android:background="@drawable/textview_background"
            android:layout_below="@id/titleTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"/>

    </RelativeLayout>
